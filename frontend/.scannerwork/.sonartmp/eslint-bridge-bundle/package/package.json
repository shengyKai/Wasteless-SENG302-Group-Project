{
  "name": "eslint-bridge",
  "version": "1.0.0",
  "description": "bridge between SonarJS and ESLint",
  "scripts": {
    "build": "yarn install && yarn check-format && yarn clear && yarn compile",
    "clear": "tsc -b src tests --clean",
    "check-format": "prettier --list-different \"{src,tests}/**/!(*.lint).ts\"",
    "test": "jest",
    "format": "prettier --write \"{src,tests}/**/!(*.lint).ts\"",
    "compile": "tsc -b src tests",
    "jar": "npm pack && mkdirp target/classes && mv eslint-bridge-1.0.0.tgz target/classes"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/SonarSource/SonarJS.git"
  },
  "license": "LGPL-3.0",
  "bugs": {
    "url": "https://github.com/SonarSource/SonarJS/issues"
  },
  "homepage": "https://github.com/SonarSource/SonarJS#readme",
  "engines": {
    "node": ">=6"
  },
  "devDependencies": {
    "@types/bytes": "3.1.0",
    "@types/eslint": "6.8.1",
    "@types/eslint-scope": "3.7.0",
    "@types/esprima": "4.0.2",
    "@types/estree": "0.0.45",
    "@types/express": "4.16.0",
    "@types/jest": "26.0.14",
    "@types/node": "14.11.5",
    "@types/semver": "7.3.1",
    "fs-extra": "7.0.0",
    "jest": "26.5.0",
    "jest-sonar-reporter": "1.3.0",
    "mkdirp": "1.0.4",
    "prettier": "2.1.2",
    "ts-jest": "26.4.1"
  },
  "dependencies": {
    "@typescript-eslint/eslint-plugin": "2.34.0",
    "@typescript-eslint/experimental-utils": "2.34.0",
    "@typescript-eslint/parser": "2.34.0",
    "babel-eslint": "10.1.0",
    "body-parser": "1.18.3",
    "builtin-modules": "3.1.0",
    "bytes": "3.1.0",
    "eslint": "6.6.0",
    "eslint-plugin-chai-friendly": "0.5.0",
    "eslint-plugin-sonarjs": "0.5.0",
    "espree": "6.1.2",
    "express": "4.16.3",
    "run-node": "1.0.0",
    "semver": "7.3.2",
    "typescript": "3.8.3",
    "vue-eslint-parser": "7.1.0"
  },
  "bundledDependencies": [
    "@typescript-eslint/eslint-plugin",
    "@typescript-eslint/experimental-utils",
    "@typescript-eslint/parser",
    "babel-eslint",
    "body-parser",
    "builtin-modules",
    "bytes",
    "eslint",
    "eslint-plugin-chai-friendly",
    "eslint-plugin-sonarjs",
    "espree",
    "express",
    "run-node",
    "semver",
    "vue-eslint-parser",
    "typescript"
  ],
  "prettier": {
    "printWidth": 100,
    "trailingComma": "all",
    "singleQuote": true,
    "arrowParens": "avoid",
    "endOfLine": "lf"
  },
  "files": [
    "lib/",
    "bin/"
  ]
}
